name: 5xx responses in nginx log
type: frequency
index: nginx-*

num_events: 1
timeframe:
  minutes: 10

filter:
- query:
    query_string:
      query: "response:5*"

alert:
- "email"
- "slack"
- "command"
email:
- "wuvt.it@gmail.com"
- "root@wuvt.vt.edu"
slack_webhook_url: "{{ slack_webhook_url }}"
command:
- "/usr/local/bin/ircalert"
- "-nick"
- "wuvt-ircalert"
- "-server"
- "irc.oftc.net:6697"
- "-ssl"
- "-channel"
- "#wuvt"
- "-message"
- "5xx responses in nginx log"
