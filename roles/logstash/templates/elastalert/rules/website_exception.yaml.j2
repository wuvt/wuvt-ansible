name: Website exceptions
type: frequency
index: kubernetes-*

num_events: 1
timeframe:
  minutes: 10

filter:
- query:
    query_string:
      query: "Exception AND \"ERROR in app\""

alert:
- "email"
- "slack"
- "command"
email:
- "wuvt.it@gmail.com"
- "root@wuvt.vt.edu"
- "wuvt@mutantmonkey.in"
slack_webhook_url: "{{ slack_webhook_url }}"
command:
- "/usr/local/bin/ircalert"
- "-nick"
- "wuvt-ircalert"
- "-server"
- "irc.oftc.net:6697"
- "-ssl"
- "-channel"
- "#wuvt"
- "-message"
- "Website exceptions"
