upstream wuvt-site-am {
    server naro1.wuvt.vt.edu:8444;
    server naro2.wuvt.vt.edu:8444;
    server columbia.wuvt.vt.edu:8444;
}

server {
    listen        80;
    listen        [::]:80;
    server_name   am.wuvt.vt.edu;

    location /.well-known/acme-challenge {
        root /var/lib/letsencrypt/public_html;
        default_type text/plain;
    }

    location / {
        return 301 https://am.wuvt.vt.edu$request_uri;
    }
}


server {
    listen        443      ssl http2;
    listen        [::]:443 ssl http2;
    server_name   am.wuvt.vt.edu;

    ssl_certificate     /etc/letsencrypt/live/am.wuvt.vt.edu/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/am.wuvt.vt.edu/privkey.pem;
    include tls.conf;
    gzip off;

    rewrite ^/trackman(/.*) https://trackman-am.apps.wuvt.vt.edu$1;

    location / {
        proxy_set_header Host              $host;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
        proxy_set_header X-Real-IP         $remote_addr;

        proxy_buffering off;
        proxy_cache off;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        chunked_transfer_encoding off;

        proxy_ssl_trusted_certificate /etc/ssl/certs/upstream-ca.pem;
        proxy_ssl_verify on;

        proxy_pass https://wuvt-site-am;
        client_max_body_size 10M;
    }
}
